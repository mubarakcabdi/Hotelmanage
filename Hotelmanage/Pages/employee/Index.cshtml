@page
@model IndexModel
@{
    ViewData["Title"] = "employee page";
}
@if (Model.errormsg.Length > 0)
{
	
  <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.errormsg
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">x</button>
      
   </div>

}

<center>
    <h1>Prison management</h1>
    <h4>View Staff Prison</h4>
</center>
<a style="width:100px" href="/employee/Add_employee"class="btn btn-success rounded-pell">Add</a>
<br><br>
<table id="mytable" class="table table-striped table-bordered">
    <thead>
        <tr class="bg-success text-white">
            <th>ID</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Action</th> 
            <th></th>
        </tr>
    </thead>
    <tbod>
        @foreach (var @row in Model.employeelist)

        {
          <tr>
              <td>@row.id</td>
               <td>@row.name</td>
               <td>@row.gender</td>
               <td>@row.address</td>
               <td>@row.phone</td>
               <td>
                    <a href="/employee/Edit_employee?id=@row.id" class="btn btn-secondary btn-sm btn-outline-success">Edit</a>
                      <a href="/employee/delete_employee?id=@row.id" class="btn btn-secondary btn-sm btn-outline-success">delete</a>
               </td>
               <th></th>
          </tr>
        }
    </tbod>
  </table>

  <script>
    // Use jQuery in noConflict mode
    jQuery(document).ready(function ($) {
        $('#mytable').DataTable({
            //"order": [0,asc],
            order: [0, 'desc'],
            mark: true,
            dom: 'Bfrtip',
            lengthMenu: [
                [10, 25, 50, 100, -1],
                ['10 rows', '25 rows', '50 rows', '100 rows', 'Show All']
            ],
            buttons: [
                'pageLength',
                {
                    extend: 'copyHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'csvHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                'colvis'
            ],
            columnDefs: [{
                targets: -1,
                visible: false
            }]
        });
    });
</script>



